{
  "manifest_version": 3,
  "name": "Workflow Synthesizer",
  "version": "1.0.0",
  "description": "AI-powered workflow automation for Gmail and web browsing",
  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png"
  },
  "host_permissions": [
    "https://mail.google.com/*",
    "https://medium.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["scripts/gmail-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://medium.com/*", "https://*.medium.com/*"],
      "js": ["scripts/medium-content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
